set render-loading false

set font "JetBrains Mono 9"
set selection-notification true
set sandbox none
set statusbar-h-padding 2
set statusbar-v-padding 2
set page-padding 15
set selection-clipboard clipboard

map <C-k> scroll full-up
map <C-j> scroll full-down
map <Left> scroll full-up
map <Right> scroll full-down
map K zoom in
map J zoom out
map p print

include ./catppuccin/catppuccin-mocha

